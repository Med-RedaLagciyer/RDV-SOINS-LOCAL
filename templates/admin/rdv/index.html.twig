{% extends 'base.html.twig' %}

{% block title %}Rendez-vous
{% endblock %}

{% block pageHeader%}

	<style>
		.select2-container--default .select2-results {
			z-index: 1050 !important;

		}
		.select2-container--default .select2-selection--single {
			height: 34.8px;
		}

		.select2-container--default .select2-selection--single {
			width: 100% !important; /* Ensure the selection box is 100% width */
		}

		#tablesActes td {
			padding: 5px;
		}
	</style>

	<div class="page-header d-print-none">
		<div class="container-xl">
			<div class="row g-2 align-items-center">
				<div
					class="col">
					<!-- Page pre-title -->
					<div class="page-pretitle">
						Rendez-vous
					</div>
					<h2 class="page-title">
						Listing
					</h2>
				</div>
				<!-- Page title actions -->
				<div class="col-auto ms-auto d-print-none">
					<div class="btn-list">
						<div class="dropdown" style="">
							<svg class="icon" fill="black" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<circle cx="12" cy="5" r="2"></circle>
								<circle cx="12" cy="12" r="2"></circle>
								<circle cx="12" cy="19" r="2"></circle>
							</svg>
							<div class="actions dropdown-menu dashboard-dropdown dropdown-menu-center mt-2 py-1">
								<a href="#" class="dropdown-item export" style="font-size: 10px !important;">
									<i class="fa-solid fa-file-export"></i>&nbsp; Exporter</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block body %}


	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="row col-md-4">
					<div class="col-md-3 m-3 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterAujourdhui" value="today">
							<label class="form-check-label" for="filterAujourdhui">Aujourd'hui</label>
						</div>
					</div>
					<div class="col-md-2 m-2 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterHier" value="yesterday">
							<label class="form-check-label" for="filterHier">Hier</label>
						</div>
					</div>
					<div class="col-md-2 m-2 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio filterDate" type="radio" name="filterDate" id="filterTous" value="all" checked>
							<label class="form-check-label" for="filterTous">Tous</label>
						</div>
					</div>
				</div>
				<div class="table-responsive">
					<table id="list_rendezvous" class="table table-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th width="3%">#</th>
								<th width="10%">Admission</th>
								<th width="12%">Etudiant</th>
								<th width="10%">Code</th>
								<th width="12%">Patient</th>
								<th width="6%">CIN</th>
								<th>Act</th>
								<th width="10%">Date</th>
								<th width="10%">Date creation</th>
								<th width="1%"></th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	{% include 'admin/rdv/modals/details.html.twig' %}
	{% include 'admin/rdv/modals/export.html.twig' %}
{% endblock %}
{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('admin_rdv') }}
{% endblock %}
